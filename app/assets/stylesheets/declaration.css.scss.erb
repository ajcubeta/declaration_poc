@import "mixins.css.scss";

/* Declaration */

header#declaration {
  position: relative;
  border-bottom: 1px solid #adadad;
  background: #fff url(<%= asset_path("filter_bg.gif") %>);
  @include rounded-top-corner;

  h1 {
    text-align: center;
    font-size: 170%; line-height: 180%; color: #444;
    text-shadow: 0 1px 0 #fff;
    -webkit-font-smoothing: antialiased;
  }
}

section#declaration {
  width: 960px;
  padding: 10px;

  .heading {
    margin-top: 1em;
    text-align: center;

    .employment_details {
      font-size: 140%;
      color: #777;
    }

    .notice {
      margin: 2em auto;
      width: 600px;
      padding-bottom: 10px;
      border-bottom: 1px solid #ddd;

      ul {
        list-style: none;
        margin-left: 10px;
        text-align: left;
        color: #555; font-size: 90%;
      }
    }

    p {
      margin: 10px auto;
      background: #e2e2e2;
      color: #e14040;
      font-size: 90%;
      font-weight: bold;
      @include rounded-corner(10px);
    }

    .require_declaration { width: 360px; }
    .require_workpass { width: 430px; }
    .require_dependentpass { width: 480px; }
  }

  form {
    .paper-wrap {
      margin: 1em auto 10px auto;
      padding-top: 5px;
      // border-bottom: 1px solid #ccc;

      .declaration_form {
        // border: 1px solid #b2b9bc;
        border-bottom: none;
        padding: 10px 10px 10px 30px;

        p { margin-bottom: 1.4em; }

        table {
          margin-left: 10px;
          font-size: 13px;
          padding: 3px;
          border-collapse: collapse;

          tbody {
            tr {
              td {
                border:solid 1px #ccc;
                vertical-align: middle;
                padding: 4px;
              }

              td.header {
                background-color: #ffcc80;
                .expand { width: 400px; }
                span { font-weight: bold; }
              }

              td.bank_label {
                border:solid 1px #ccc;
                vertical-align: middle;
                padding: 5px;
                background-color: #ffcc80;

                span { font-weight: bold; }
              }

              td.bank_field {
                border:solid 1px #ccc;
                vertical-align: middle;
                padding: 3px;
                width: 250px;

                select {
                  @include helvetica(100%);
                  color: #555;
                  background-color: #fefefe;
                  width: 100%;
                  height: 25px;
                }

                select:hover { color: #333; }
              }
            }
          }
        }

        fieldset {
          margin: 0 auto;

          .mod {
            padding: 2px;
            margin-bottom: 5px;

            .label {
              font-weight: bold;
              -webkit-font-smoothing: antialiased;
              float: left;
              width: 190px;
              color: #666;
              margin-top: 4px;
              padding-right: 15px;
              text-align: right;
            }

            .value {
              width: 400px;
              float: left;
              color: #666;

              small {
                display: block;
                float: left;
                color: #888;
                font-size: 80%;
              }

              select {
                @include helvetica(100%);
                color: #555;
                background-color: #fefefe;
                width: 200px;
                height: 25px;
              }

              select:hover { color: #333; }

              ul li {
                list-style: none;
                padding: 5px;
                float: left;
              }
            }

            input[disabled], select[disabled], textarea[disabled] {
              background-color: #E2E2E2;
              background-image: none;
            }

            p {
              width: 500px;
              font-size: 90%;
              color: #555;
              margin: 0 auto 2em auto;
            }
          }
        }

        table.monthly_donation {
          width:97%;
          margin-left: 10px;
          margin-bottom: 30px;

          tbody tr {
            td.donation_header {
              background-color:#ffcc80;
              span { font-weight: bold; }
            }

            .agency_width { width: 120px; }

            td.agency_list {
              border:solid 1px #ccc;
              vertical-align: middle;
              padding:3px;
              width:100px;
            }
          }
        }

        table.medical_disclosure {
          margin-left: 10px;
          margin-bottom: 30px;
          width: 97%;

          tbody tr {
            td.item_num {
              padding: 5px;
              width: 20px;
              vertical-align: top;
              text-align: right;
            }

            td.disclosure {
              padding: 5px;
              width: 440px;
              text-align: left;

              span { color: #444; }
              .detail { display: none; }
            }

            td.check_box {
              padding: 5px;
              width: 100px;

              ul {
                margin-top: 5px;

                li {
                  text-align: center;
                  float: left;
                  padding: 5px;

                  input[type='checkbox'] { vertical-align: middle; }
                }
              }
            }
          }
        }

        table.work_pass_table {
          margin: auto;
          margin-bottom: 30px;

          tbody tr {
            td.pass_item {
              width: 485px;
              text-align: left;

              p {
                text-align: left;
                vertical-align: middle;

                select {
                  @include helvetica(100%);
                  color: #555;
                  background-color: #fefefe;
                  width: 200px;
                  height: 25px;
                  margin-top: 5px;
                  margin-bottom: 10px;
                }

                select:hover { color: #333; }
              }

              table.passes_table {
                margin: 5px auto 5px 0;
                display: none;
                width: 350px;

                tr td.header {
                  background: #e2e2e2;
                  font-weight: bold;
                }
              }
            }

            td.check_box {
              padding: 5px;

              ul {
                margin-top: 5px;

                li {
                  text-align: center;
                  float: left;
                  padding: 5px;

                  input[type='checkbox'] { vertical-align: middle; }
                }
              }
            }

            td.check_box_item {
              padding: 5px;

              ul {
                margin-top: 5px;

                li {
                  text-align: center;
                  float: left;
                  padding: 5px;

                  input[type='checkbox'] { vertical-align: middle; }
                }
              }
            }

          }
        }

        table.education_detail_table  {
          margin: auto;
          margin-bottom: 30px;

          tbody tr {
            td.description {
              padding: 5px;
              width: 205px;
              margin-top: 4px;
              text-align: right;
            }

            td.education_detail_header {
              padding: 5px;
              width: 200px;
              text-align: left;
              font-weight: bold;
            }

            td.fieldset {
              padding: 5px;
              width: 380px;

              select {
                @include helvetica(100%);
                color: #555;
                background-color: #fefefe;
                width: 200px;
                height: 25px;
              }

              select.education { width: 340px; }
              select.enrolment { width: 150px; }
              select.school_country { width: 230px; }

              select:hover { color: #333; }

              ul {
                margin-top: 5px;

                li {
                  text-align: center;
                  float: left;
                  padding: 5px;

                  input[type='checkbox'] { vertical-align: middle; }
                }
              }

              input[disabled], select[disabled], textarea[disabled] {
                background-color: #E2E2E2;
                background-image: none;
              }
            }
          }
        }

        table.personal_documents {
          margin-left: 10px;
          margin-bottom: 30px;
          vertical-align: top;
          width: 97%;

          tbody tr {
            td.header {
              padding: 10px;
              font-weight: bold;
              background-color: #ffcc80;
            }

            td.content_label {
              padding: 10px;
              width: 170px;
              font-weight: normal;
            }

            td.content {
              padding: 10px;
              font-weight: normal;
            }

            td.item_type {
              padding: 10px;
              font-weight: bold;
              text-align: center;
              max-width: 80px;
              background-color: #ffcc80;
            }

            td.description {
              padding: 10px;

              ul li {
                margin-left: 20px;
                list-style: disc outside;
              }
            }

            td.upload_file {
              padding: 5px;
              max-width: 120px;
              vertical-align: top;
            }
          }
        }

        ul li {
          list-style: none;
          position: relative; top: -4px;
        }

        ul.bank_note {
          margin-top: -20px;
          margin-left: 20px;
          width: auto;

          li { list-style: disc outside; }
        }

        p.confirm {
          margin-top: 5px;

          input[type='checkbox'] { position: relative; top: -4px; }
        }

        ul.authorize_list {
          margin-top: -15px;
          margin-left: 30px;
          padding: 3px;
          width: auto;

          li {
            list-style: disc outside; margin: 5px;
            ul li { list-style: none; margin: 5px; }
          }
        }
      }
    }
  }

  .action {
    margin-top: 1em;
    text-align: center;
    margin-bottom: 1em;

    .submit-btn-disabled {
      text-shadow: none;
      -webkit-box-shadow: none;
      background: #D3D3D3;
      border-color: #D3D3D3;
      pointer-events: none;
    }
  }
}
